		<script type="text/javascript">
			
				var curso = new Cursos("DAW");
				curso.alta_alum("Alumno1");
				curso.alta_alum("Alumno2");
				curso.alta_alum("Alumno3");
				curso.alta_alum("Alumno4");
				curso.alta_alum("Alumno5");
				curso.alta_alum("Alumno6");
				
				curso.pinta_alum();
			
			
